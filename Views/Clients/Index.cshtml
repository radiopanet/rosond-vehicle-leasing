@model IEnumerable<RosondVehicleLeasing.Models.Client>

@{
    ViewBag.Title = "Index";
}


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CompanyName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ClientId }, new { @class = "btn btn-primary btn-sm" })) |
            @Html.ActionLink("Details", "Details", new { id=item.ClientId }, new { @class = "btn btn-info btn-sm" })) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ClientId }, new { @class = "btn btn-danger btn-sm" }))
        </td>
    </tr>
}

</table>
